<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LangBuilderController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="122.0" layoutY="22.0" prefHeight="45.0" prefWidth="356.0" styleClass="title" text="Lang Builder" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font></Label>
      <TextField fx:id="folderPath" editable="false" layoutX="100.0" layoutY="87.0" prefHeight="27.0" prefWidth="375.0" style="-fx-border-radius: 0; -fx-background-color: white; -fx-border-color: black;" />
      <Button layoutX="474.0" layoutY="87.0" mnemonicParsing="false" onAction="#selectModFolder" prefHeight="27.0" prefWidth="100.0" style="-fx-border-radius: 0;" text="Select Directory" />
      <Label layoutX="23.0" layoutY="92.0" text="Mod Folder" />
      <ListView fx:id="listView" layoutX="23.0" layoutY="132.0" prefHeight="245.0" prefWidth="323.0" />
      <Label layoutX="352.0" layoutY="132.0" text="Name" />
      <Label layoutX="352.0" layoutY="192.0" text="Description" />
      <TextField fx:id="name" layoutX="352.0" layoutY="158.0" onKeyTyped="#editName" prefHeight="25.0" prefWidth="222.0" />
      <TextArea fx:id="description" layoutX="352.0" layoutY="219.0" onKeyTyped="#editDescription" prefHeight="122.0" prefWidth="222.0" wrapText="true" />
      <Button fx:id="writeFileBtn" layoutX="352.0" layoutY="350.0" mnemonicParsing="false" onAction="#writeLangFile" prefHeight="27.0" prefWidth="222.0" text="Write Lang File" />
   </children>
</AnchorPane>
