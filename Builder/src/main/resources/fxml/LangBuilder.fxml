<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LangBuilderController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="122.0" layoutY="14.0" prefHeight="27.0" prefWidth="356.0" styleClass="title" text="Lang Builder" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font></Label>
      <TextField fx:id="folderPath" editable="false" layoutX="102.0" layoutY="54.0" prefHeight="27.0" prefWidth="367.0" styleClass="filePicker" stylesheets="@../css/style.css" />
      <Button layoutX="468.0" layoutY="54.0" mnemonicParsing="false" onAction="#selectModFolder" prefHeight="27.0" prefWidth="108.0" styleClass="filePicker" text="Select Directory" />
      <Label layoutX="25.0" layoutY="59.0" text="Mod Folder" />
      <ListView fx:id="listView" layoutX="23.0" layoutY="132.0" prefHeight="287.0" prefWidth="323.0" AnchorPane.bottomAnchor="23.0" />
      <Label layoutX="352.0" layoutY="90.0" text="Name" />
      <Label layoutX="354.0" layoutY="148.0" text="Description" />
      <TextField fx:id="name" layoutX="352.0" layoutY="116.0" onKeyTyped="#editName" prefHeight="25.0" prefWidth="222.0" />
      <TextArea fx:id="description" layoutX="352.0" layoutY="172.0" onKeyTyped="#editDescription" prefHeight="165.0" prefWidth="222.0" wrapText="true" />
      <Button fx:id="writeFileBtn" layoutX="404.0" layoutY="350.0" mnemonicParsing="false" onAction="#writeLangFile" prefHeight="27.0" prefWidth="170.0" text="Write Lang File" />
      <Label fx:id="done" alignment="CENTER" contentDisplay="CENTER" disable="true" layoutX="347.0" layoutY="355.0" prefHeight="17.0" prefWidth="53.0" text="Done!" />
   </children>
</AnchorPane>
